@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";

    var zfdepartment = ViewBag.fdepartment;
    var zfclass = ViewBag.fclass;

}

<link href="~/Content/PagedList.css" rel="stylesheet" />


