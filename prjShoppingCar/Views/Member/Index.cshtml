<p>
    年級：
    @Html.ActionLink("一", "Index", "Member", new { zfdepartment = zfdepartment, zfclass = '一', page = 1 }, null)
    @Html.ActionLink("二", "Index", "Member", new { zfdepartment = zfdepartment, zfclass = '二', page = 1 }, null)
    @Html.ActionLink("三", "Index", "Member", new { zfdepartment = zfdepartment, zfclass = '三', page = 1 }, null)
