</p>

<div class="row" style="margin-top: 10px ">

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="~/images/@item.fImg" style="width:200px;height:270px;">
                <div class="caption">
                    <h4>@item.fName</h4>
                    <h4>@item.fdepartment</h4>
                    <p>販售價格：@item.fPrice</p>
                    <p>原價：@item.fPrice_s</p>
                    <p>ISBN碼：@item.fisbn</p>
                    <p>聯絡資訊：@item.fEmail</p>
                    <p>LineID：@item.fLine</p>
                    <h4><font color="red">備註：@item.fsgtxt</font></h4>
                    @*@Html.ActionLink("加入購物車", "AddCar", "Member", new { fPId = @item.fPId, fcId = @item.fcId }, null)*@
                    @*?fPId=@item.fPId*@
                    <p><a href="@Url.Action("AddCar", "Member")?fPId=@item.fPId" class="btn btn-primary">加入購物車</a></p>

                </div>
            </div>
        </div>
    }

        <div class="caption">
            <h4><font color="white">_____</font></h4>@*調整分頁按鈕*@
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { zfdepartment, zfclass, page }))
    </div>

